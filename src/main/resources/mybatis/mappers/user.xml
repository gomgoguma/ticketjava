<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="user">
	
	<insert id="insertUser" parameterType="UserVo" >
			insert into users (
								user_no, 
								id, 
								password, 
								name, 
								phone, 
								postcode, 
								address, 
								address2, 
								email, 
								usertype,
								<if test="usertype == 2">
									bizno,
								</if>
								joindate, 
								salt
			)
			values(seq_user_no.nextval,
				   #{id},
				   #{password},
				   #{name},
				   #{phone},
				   #{postcode},
				   #{address},
				   #{address2},
				   #{email},
				   #{usertype},
				   <if test="usertype == 2">
				   		#{bizno},
				   </if>
				   sysdate,
				   #{salt}
			)
	</insert>
	
